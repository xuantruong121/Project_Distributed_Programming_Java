<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="roomItem" maxHeight="Infinity" maxWidth="Infinity" spacing="10"
      style="-fx-background-color: white; -fx-background-radius: 10;" stylesheets="@/fxml/css/RoomItemStyle.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="iuh.fit.qlksfxapp.controller.ItemController.RoomItemController">
    <!-- Top row - Room type/ID and status -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="typeRoomAndId" style="-fx-font-weight: bold; -fx-font-size: 14;" text="Standard / STA-1001"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="status"
               style="-fx-background-color: #4CAF50; -fx-background-radius: 10; -fx-padding: 2 8; -fx-text-fill: white; -fx-font-size: 12;"
               text="Trống"/>
        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
            <HBox.margin>
                <Insets left="15.0" right="15.0"/>
            </HBox.margin>
            <Image url="@/images/icon/info.png"/>
        </ImageView>
    </HBox>
    <BorderPane>
        <left>
            <ImageView fx:id="imageRoom" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true"
                       BorderPane.alignment="CENTER"/>
        </left>
        <center>
            <!-- Info row -->
            <VBox spacing="5">
                <HBox spacing="15" BorderPane.alignment="CENTER">
                    <HBox spacing="5">
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <Image url="@/images/icon/child.png"/>
                        </ImageView>
                        <Label fx:id="soLuongTre" text="0 trẻ"/>
                    </HBox>

                    <HBox spacing="5">
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <Image url="@/images/icon/adult.png"/>
                        </ImageView>
                        <Label fx:id="soLuongNguoiLon" text="0 người"/>
                    </HBox>
                </HBox>
                <Label fx:id="tenNguoiDat" style="-fx-font-weight: bold; -fx-font-size: 14;" text="Nguyễn Văn A"/>
                <Label fx:id="tenDoan" style="-fx-font-size: 12;" text="khong"/>
                <Label fx:id="ngayO" style="-fx-font-size: 12;" text="10/11 - 12/11(2 ngay)"/>
                <padding>
                    <Insets left="5.0" right="5.0"/>
                </padding>
            </VBox>
        </center>
    </BorderPane>
    <!-- Button row -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="button1" style="-fx-font-weight: bold; -fx-padding: 5 15;" text="Đặt phòng"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="button2" style="-fx-padding: 5 15;" text="Xem đơn đặt"/>
    </HBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
